<append xpath="/ui_display_info/crafting_category_display">
		<crafting_category_list display_type="WorkingOven">
			<crafting_category icon="symbol_all"					display_name="groupAll"					name="*"/>
	        <crafting_category icon="symbol_food"					display_name="lblCategoryFood"			name="Food"/>
	        <crafting_category icon="symbol_drink"					display_name="groupDrinks"				name="Drinks"/>
	        <crafting_category icon="symbol_vice"					display_name="groupWorkstationTools"	name="WorkstationTools"/>
	        <crafting_category icon="ui_game_symbol_misc_crafting"	display_name="groupResources"			name="Resources"/>
		</crafting_category_list>
		
		<crafting_category_list display_type="wineBarrelworkbench">
			<crafting_category name="CFDrink/Cooking" icon="ui_game_symbol_thirst" display_name="lblCategoryDrink" />
			<crafting_category name="Mods" icon="ui_game_symbol_assemble" display_name="lblCategoryMods" />
		</crafting_category_list>
</append>


<append xpath="/ui_display_info/crafting_category_display/crafting_category_list[@display_type='campfire']">
